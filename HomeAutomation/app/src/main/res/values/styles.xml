<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/app_bg_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--Base TextView-->
    <style name="AppTextView">
        <item name="android:textAllCaps">false</item>
        <item name="custom_font_family">SFDisplay-Regular.otf</item>
    </style>

    <!--Login Related Styles-->
    <style name="Title" parent="AppTextView">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/app_black_color</item>
        <item name="custom_font_family">SFDisplay-Regular.otf</item>
    </style>

    <style name="EditTextTitle" parent="AppTextView">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/app_black_color</item>
    </style>

    <style name="LoginEditText" parent="AppTextView">
        <item name="android:textSize">18dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:lines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/app_grey1_color</item>
    </style>

    <style name="SignButton" parent="AppTextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/rounded_green_button</item>
        <item name="android:textColor">@color/app_white_color</item>
    </style>

    <style name="SelctSwitchTypeButton" parent="AppTextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/rounded_white</item>
        <item name="android:textColor">@color/app_grey1_color</item>
    </style>

    <style name="ForgotPasswordButton" parent="AppTextView">
        <item name="android:textSize">17dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/app_grey1_color</item>
    </style>

    <style name="SignUpButton" parent="ForgotPasswordButton">
        <item name="android:background">@color/app_grey3_color</item>
        <item name="android:textColor">@color/app_black_color</item>
    </style>

    <!--Side Menu Related Styles-->
    <style name="UserName" parent="AppTextView">
        <item name="android:textColor">@color/app_white_color</item>
        <item name="android:textSize">22dp</item>
    </style>
    <style name="SideMenuOptionsTextView" parent="AppTextView">
        <item name="android:textColor">@color/app_white_color</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@drawable/bottom_green_border</item>
    </style>

    <!--Home Fragment-->
    <style name="PlusImageView">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:src">@mipmap/plus</item>
        <item name="android:layout_margin">@dimen/default_gap</item>
    </style>

    <style name="WelcomeMessage" parent="AppTextView">
        <item name="android:textColor">@color/app_white_color</item>
        <item name="android:textSize">20dp</item>
        <item name="custom_font_family">SFDisplay-Bold.otf</item>
    </style>

    <style name="NoItemsTextView" parent="AppTextView">
        <item name="android:textColor">@color/app_grey1_color</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="FloorName" parent="AppTextView">
        <item name="android:textColor">@color/app_grey1_color</item>
        <item name="android:textSize">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
    </style>

    <style name="FragmentDialogTitle" parent="AppTextView">
        <item name="android:textColor">@color/app_grey1_color</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@color/app_grey3_color</item>
        <item name="android:padding">@dimen/default_gap</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListView" >
        <item name="android:padding">@dimen/default_gap</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">@dimen/default_gap</item>
    </style>

    <style name="AddButton" parent="AppTextView">
        <item name="android:textColor">@color/app_green_color</item>
        <item name="android:background">@drawable/top_right_grey_border</item>
        <item name="android:text">@string/add_button_title</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CancelButton" parent="AddButton">
        <item name="android:textColor">@color/app_grey1_color</item>
        <item name="android:text">@string/cancel_button_title</item>
    </style>


    <style name="AddDeviceEditText" parent="LoginEditText">

    </style>

    <style name="AddDeviceEditTextTitle" parent="EditTextTitle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/app_white_color</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
