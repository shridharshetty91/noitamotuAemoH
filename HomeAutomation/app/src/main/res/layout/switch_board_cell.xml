<com.magnaton.homeautomation.Home.SwitchBoardCell
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.magnaton.homeautomation.AppComponents.Views.RUITextView
        style="@style/AddDeviceEditTextTitle"
        android:id="@+id/device_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_gap" />

    <com.magnaton.homeautomation.AppComponents.Views.RUIImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_slideshow"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/medium_gap"/>

</com.magnaton.homeautomation.Home.SwitchBoardCell>
