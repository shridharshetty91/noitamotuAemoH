<com.magnaton.homeautomation.Home.SwitchCell
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cell_bg"
    android:paddingTop="@dimen/medium_gap"
    android:paddingRight="@dimen/medium_gap"
    android:paddingBottom="@dimen/medium_gap">

    <com.magnaton.homeautomation.AppComponents.Views.RUIImageView
        android:id="@+id/imageView_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:src="@mipmap/ic_action_more_vert" />

    <com.magnaton.homeautomation.AppComponents.Views.RUITextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/imageView_more"
        style="@style/FloorName"/>

    <View android:id="@+id/fakeView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/fakeView"
        android:layout_alignParentRight="true"
        android:visibility="visible" />

    <Switch
        android:id="@+id/switch_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="visible" />

</com.magnaton.homeautomation.Home.SwitchCell>
