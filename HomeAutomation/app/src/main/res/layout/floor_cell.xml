<com.magnaton.homeautomation.Home.FloorCell
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cell_bg"
    android:padding="@dimen/medium_gap">

    <com.magnaton.homeautomation.AppComponents.Views.RUIImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/floor"
        android:layout_centerVertical="true" />

    <com.magnaton.homeautomation.AppComponents.Views.RUITextView
        android:id="@+id/floor_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/max_gap"
        android:layout_toEndOf="@id/imageView"
        android:layout_toStartOf="@+id/imageView_more"
        style="@style/FloorName"/>

    <com.magnaton.homeautomation.AppComponents.Views.RUIImageView
        android:id="@id/imageView_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:src="@mipmap/ic_action_more_vert"
        android:layout_alignParentEnd="true"/>

</com.magnaton.homeautomation.Home.FloorCell>
