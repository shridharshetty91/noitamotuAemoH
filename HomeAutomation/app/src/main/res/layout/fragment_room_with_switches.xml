<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_bg_color"
    tools:context="com.magnaton.homeautomation.Home.RoomWithSwitchesFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@null"
        android:padding="0dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="0dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            />
    </android.support.design.widget.AppBarLayout>

    <com.magnaton.homeautomation.AppComponents.Views.RUITextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/no_items_label"
        android:layout_margin="@dimen/mega_gap"
        style="@style/NoItemsTextView"
        android:textAlignment="center"
        android:text="@string/no_floors_message_in_home" />

    <com.magnaton.homeautomation.AppComponents.Views.RUIListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_holder"
        android:id="@+id/list_view"
        style="@style/ListView">
    </com.magnaton.homeautomation.AppComponents.Views.RUIListView>

    <com.magnaton.homeautomation.AppComponents.Views.RUIImageView
        android:id="@+id/plus_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PlusImageView" />

</RelativeLayout>